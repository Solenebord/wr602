{% extends 'base.html.twig' %}

{% block title %}Create PDF{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ✅</h1>

    <p>pdf limit: {{ pdfLimit }}</p>
    {# <form method="post" action="{{ path('app_generate_pdf') }}" target="blank">
        <label for="url">URL:</label>
        <input type="text" id="url" name="url" required />
        <button type="submit">Générer PDF</button>
    </form> #}

    {% if isAllowed == true %}
    <form method="post" action="{{ path('app_pdf') }}" target="_blank" enctype="multipart/form-data">
        {{ form_row(form._token) }}
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="PDF"/>
        <label for="url">URL:</label>
        <input type="text" id="url" name="url" placeholder="https://bigrat.monster/" required />
        <button type="submit">Generate PDF</button>
    </form>
    {% else %}
    <p>You reached your subscription pdf limit for today.</p>
    {% endif %}

</div>

{% endblock %}
