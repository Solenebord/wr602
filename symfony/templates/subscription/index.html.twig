{% extends 'base.html.twig' %}

{% block title %}Subscriptions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Our subscriptions</h1>
    
    <div class="cards">
        {% for subscription in subscriptions %}
        <div class="card">
        <h2>{{ subscription.title }}</h2>
        <p>Price: ${{ subscription.price }}</p>
        <p>{{ subscription.pdfLimit }} pdf/day</p>
        <p>{{ subscription.description }}</p>

        <form method="post" action="{{path('subscription_validation')}}">
            <input type="hidden" name="title" value="{{ subscription.title }}">
            {% if currentSubscription == subscription.title %}
            <p>(Current subscription)</p>
            {% else %}
            <button type="submit">Subscribe</button>
            {% endif %}

        </form>
        </div>
           
        {% endfor %}
    </div>
   

</div>
{% endblock %}
